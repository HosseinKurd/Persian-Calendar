<resources>

    <style name="AppTheme.TextView.Base" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_persian_calendar_library</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="AppTheme.TextView.Medium" parent="AppTheme.TextView.Base">
        <item name="android:textSize">@dimen/text_size_content</item>
    </style>

    <style name="AppTheme.TextView.Description" parent="AppTheme.TextView.Base">
        <item name="android:textSize">@dimen/text_size_description</item>
    </style>

    <style name="AppTheme.TextView.Titre" parent="AppTheme.TextView.Medium">
        <item name="android:textSize">@dimen/text_size_titre</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView.Medium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <declare-styleable name="WorkCalendarView">
        <attr name="dayListMarginTop" format="dimension" />
        <attr name="weekCalendarBackgroundStart" format="reference" />
        <attr name="weekCalendarBackgroundEnd" format="reference" />
        <attr name="weekCalendarSrcStart" format="reference" />
        <attr name="weekCalendarSrcEnd" format="reference" />
        <attr name="stateTitle" format="string|reference" />
        <attr name="reverseDayList" format="boolean" />
        <attr name="autoGenerateDays" format="boolean" />
        <attr name="autoIncreaseDays" format="boolean" />
       <!-- <attr name="belowLineCompleted" format="enum">
            <enum name="ZERO" value="0" />
            <enum name="ONE" value="1" />
            <enum name="TWO" value="2" />
        </attr>-->
    </declare-styleable>

</resources>